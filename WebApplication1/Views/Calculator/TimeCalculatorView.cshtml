
@{
    ViewData["Title"] = "TimeCalculatorView";
}

<h1>TimeCalculatorView</h1>
@using (Html.BeginForm("CalculateTime", "Calculator", FormMethod.Post)) {
<p>
    @Html.Label("Hours") <br />
    @Html.TextBox("Hours")
</p>
<p>
    @Html.Label("Minutes") <br />
    @Html.TextBox("Minutes") <br />
    @Html.Label("Seconds") <br />
    @Html.TextBox("Seconds")
</p>
<p>
    <input type="submit" value="Calculate time">
</p>
}
